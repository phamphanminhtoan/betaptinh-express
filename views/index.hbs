<form action="/submit" method="get" id="form">
    <div class="container">
        <h1>
            Bé Tập Tính
        </h1>
        <div class="row">
            <div class="col-md-6">


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Số thứ nhất</div>
                        <input type="text" name="x" class="form-control" id="firstNumber" placeholder="Nhập số, vd: 1, -53,..." data-toggle="tooltip" data-placement="top" title="Không hợp lệ với: a,F,/,@,$,*,...">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon" style="padding-right: 20px">Số thứ hai</div>
                        <input type="text" name="y" class="form-control" id="secondNumber" placeholder="Nhập số, vd: 1, -53,..." data-toggle="tooltip" data-placement="top" title="Không hợp lệ với: a,F,/,@,$,*,...">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <input name="pheptinh" type="radio" id="add" value="add" data-col="1" checked="true"><label style="padding-left: 10px; font-size: 20px">Cộng</label>
                    </div>
                    <div class="col-md-6">
                        <input name="pheptinh" type="radio" id="sub" value="sub" data-col="2"><label style="padding-left: 10px; font-size: 20px">Trừ</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input name="pheptinh" type="radio" id="mul" value="mul" data-col="1"><label style="padding-left: 10px; font-size: 20px">Nhân</label>
                    </div>
                    <div class="col-md-6">
                        <input name="pheptinh" type="radio" id="div" value="div" data-col="2"><label style="padding-left: 10px; font-size: 20px">Chia</label>
                    </div>
                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon" style="padding-right: 36px">Kết quả</div>
                        <input type="text" class="form-control" id="result" name="result"  readonly>
                    </div>
                </div>
                <div class="error">
                    <h3 style="color: red" id="error"></h3>
                </div>
            </div>
            <div class="col-md-6">
                <div >
                    <button type="submit" value="submit" id="btnResult" class="btn btn-success col-md-3"><b>Tính</b></button>
                </div>
            </div>
        </div>
    </div>
</form>